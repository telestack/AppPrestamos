<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#6c7c7c" />
            <stroke
                android:width="1dp"
                android:color="#768d87" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@null"
                android:endColor="#D8D8D8"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#D8D8D8" />
            <corners
                android:radius="200dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>



</selector>